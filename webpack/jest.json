{
    "verbose": true,
    "rootDir": "..",
    "roots": ["<rootDir>/test"],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://127.0.0.1",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "moduleDirectories": ["node_modules", "src"],
    "globals": {
        "ts-jest": {
            "tsConfig": "./webpack/tsconfig.jest.json",
            "diagnostics": true
        }
    }
}
